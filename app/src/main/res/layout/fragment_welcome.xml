<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="shareViewModelWelcome"
                type="com.udacity.shoestore.shareviewmodel.ShareViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginHorizontal="@dimen/dimen_40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".features.welcome.WelcomeFragment">

        <ImageView
                android:id="@+id/imgWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/dimen_40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <TextView
                android:id="@+id/textWelcomeTitle"
                style="@style/TitleTextView"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/app_name"
                app:layout_constraintTop_toBottomOf="@id/imgWelcome" />

        <TextView
                android:id="@+id/textWelcomeContent"
                style="@style/NormalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_80dp"
                android:text="@string/shopping"
                app:layout_constraintTop_toBottomOf="@id/textWelcomeTitle" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWelcomeNext"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/next"
                android:onClick="@{() -> shareViewModelWelcome.startNextWelcomeScreen()}"
                android:layout_marginBottom="@dimen/dimen_80dp"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>